<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f9">

    <!-- Header Section -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Dashboard"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="16dp" />

    <TextView
        android:id="@+id/txtSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to your personalized dashboard"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="8dp" />

    <ImageView
        android:id="@+id/txtprofileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/darkstarbg"
        android:contentDescription="Profile Picture"
        app:layout_constraintTop_toBottomOf="@id/txtSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Overview Section -->
    <TextView
        android:id="@+id/txtoverviewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overview"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txtprofileImage"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="16dp" />

    <TextView
        android:id="@+id/txtsalesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Sales: $50,000"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txtoverviewTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/txtusersText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active Users: 1,200"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txtsalesText"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="8dp" />

    <ImageView
        android:id="@+id/imgchartImage"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/darkstarbg"
        android:contentDescription="Chart Placeholder"
        app:layout_constraintTop_toBottomOf="@id/txtusersText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Products Section -->
    <TextView
        android:id="@+id/productsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Featured Products"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imgchartImage"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="16dp" />

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/signuppagebg"
        android:contentDescription="Product Image"
        app:layout_constraintTop_toBottomOf="@id/productsTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name: Widget X"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/productImage"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: $99.99"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/productName"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="8dp" />

    <!-- Branding Section -->
    <TextView
        android:id="@+id/brandTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Our Brand"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/productPrice"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="16dp" />

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/darkstarbg"
        android:contentDescription="Logo Image"
        app:layout_constraintTop_toBottomOf="@id/brandTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/brandDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trusted by 10,000+ customers worldwide"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>